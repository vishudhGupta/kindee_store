{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-video-section-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    overflow: hidden;
    min-height: {{ block.settings.section_height }}px;
  }

  .ai-video-container-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    height: {{ block.settings.section_height }}px;
    overflow: hidden;
  }

  .ai-video-wrapper-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }

  .ai-video-element-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-video-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-video-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 500px;
    max-height: 500px;
  }

  .ai-video-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  .ai-video-overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, {{ block.settings.overlay_opacity | divided_by: 100.0 }});
    z-index: 1;
  }

  .ai-video-content-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: {{ block.settings.content_position_vertical }};
    align-items: {{ block.settings.content_position_horizontal }};
    text-align: {{ block.settings.text_alignment }};
    padding: 40px 20px;
    z-index: 2;
  }

  .ai-video-content-inner-{{ ai_gen_id }} {
    max-width: {{ block.settings.content_max_width }}px;
    width: 100%;
    {% if block.settings.show_text_background %}
      background-color: rgba(0, 0, 0, {{ block.settings.text_background_opacity | divided_by: 100.0 }});
      padding: 32px 40px;
      border-radius: {{ block.settings.text_background_radius }}px;
    {% endif %}
  }

  .ai-video-heading-{{ ai_gen_id }} {
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size }}px;
    margin: 0 0 16px;
    line-height: 1.2;
  }

  .ai-video-subheading-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.text_size }}px;
    margin: 0 0 24px;
    line-height: 1.5;
  }

  .ai-video-button-{{ ai_gen_id }} {
    display: inline-block;
    padding: 14px 32px;
    background-color: {{ block.settings.button_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_text_size }}px;
    transition: background-color 0.3s ease;
  }

  .ai-video-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_color }};
  }

  @media screen and (max-width: 749px) {
    .ai-video-container-{{ ai_gen_id }} {
      height: {{ block.settings.section_height | times: 0.7 }}px;
    }

    .ai-video-section-{{ ai_gen_id }} {
      min-height: {{ block.settings.section_height | times: 0.7 }}px;
    }

    .ai-video-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.7 }}px;
    }

    .ai-video-subheading-{{ ai_gen_id }} {
      font-size: {{ block.settings.text_size | times: 0.85 }}px;
    }

    .ai-video-content-{{ ai_gen_id }} {
      padding: 20px 16px;
    }

    .ai-video-content-inner-{{ ai_gen_id }} {
      {% if block.settings.show_text_background %}
        padding: 24px 28px;
      {% endif %}
    }
  }
{% endstyle %}

<div class="ai-video-section-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-video-container-{{ ai_gen_id }}">
    <div class="ai-video-wrapper-{{ ai_gen_id }}">
      {% if block.settings.video_url != blank %}
        <video
          class="ai-video-element-{{ ai_gen_id }}"
          {% if block.settings.autoplay %}autoplay{% endif %}
          {% if block.settings.loop %}loop{% endif %}
          {% if block.settings.muted %}muted{% endif %}
          {% if block.settings.controls %}controls{% endif %}
          playsinline
        >
          <source src="{{ block.settings.video_url }}" type="video/mp4">
          Your browser does not support the video tag.
        </video>
      {% else %}
        <div class="ai-video-placeholder-{{ ai_gen_id }}">
          {{ 'hero-apparel-1' | placeholder_svg_tag }}
          <div class="ai-video-empty-state-{{ ai_gen_id }}">
            Next, add a video URL
          </div>
        </div>
      {% endif %}
    </div>

    {% if block.settings.show_overlay %}
      <div class="ai-video-overlay-{{ ai_gen_id }}"></div>
    {% endif %}

    <div class="ai-video-content-{{ ai_gen_id }}">
      <div class="ai-video-content-inner-{{ ai_gen_id }}">
        {% if block.settings.heading != blank %}
          <h2 class="ai-video-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
        {% endif %}

        {% if block.settings.subheading != blank %}
          <div class="ai-video-subheading-{{ ai_gen_id }}">{{ block.settings.subheading }}</div>
        {% endif %}

        {% if block.settings.button_text != blank and block.settings.button_link != blank %}
          <a href="{{ block.settings.button_link }}" class="ai-video-button-{{ ai_gen_id }}">
            {{ block.settings.button_text }}
          </a>
        {% endif %}
      </div>
    </div>
  </div>
</div>

