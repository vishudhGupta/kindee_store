<style>
  .contact-info-section svg {
    width: 40px !important;
    height: 40px !important;
  }

  .contact-card {
    transition: all 0.3s ease;
  }

  .contact-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 6px 15px rgba(0, 0, 0, 0.08);
  }

  .contact-info-section h3 {
    margin-top: 10px;
    font-weight: 600;
  }

  .contact-info-section p {
    font-size: 14px;
    line-height: 1.6;
    color: #555;
  }
</style>

<section class="contact-info-section py-12 bg-[#f9fafb]">
  <div class="page-width text-center">
    <h2 class="text-3xl font-semibold text-gray-800 mb-10">{{ section.settings.heading }}</h2>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">

      <!-- Address -->
      <div class="contact-card bg-white p-6 rounded-2xl shadow-sm hover:shadow-md">
        <div class="flex flex-col items-center text-center">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5" class="text-green-600">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 11c1.104 0 2-.896 2-2s-.896-2-2-2-2 .896-2 2 .896 2 2 2z" />
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 22s8-4.5 8-11a8 8 0 10-16 0c0 6.5 8 11 8 11z" />
          </svg>
          <h3>Our Address</h3>
          <p>{{ section.settings.address }}</p>
        </div>
      </div>

      <!-- Phone -->
      <div class="contact-card bg-white p-6 rounded-2xl shadow-sm hover:shadow-md">
        <div class="flex flex-col items-center text-center">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5" class="text-green-600">
            <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75a.75.75 0 01.75-.75h2.09a.75.75 0 01.705.48l1.26 3.15a.75.75 0 01-.17.8l-1.3 1.3a11.03 11.03 0 005.28 5.28l1.3-1.3a.75.75 0 01.8-.17l3.15 1.26a.75.75 0 01.48.705v2.09a.75.75 0 01-.75.75H17a16.5 16.5 0 01-14.75-14.75v-.5z" />
          </svg>
          <h3>Call Us</h3>
          <p>{{ section.settings.phone }}</p>
        </div>
      </div>

      <!-- Email -->
      <div class="contact-card bg-white p-6 rounded-2xl shadow-sm hover:shadow-md">
        <div class="flex flex-col items-center text-center">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5" class="text-green-600">
            <path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75l-9.75 6-9.75-6m19.5 0A2.25 2.25 0 0019.5 4.5H4.5a2.25 2.25 0 00-2.25 2.25v10.5A2.25 2.25 0 004.5 19.5h15a2.25 2.25 0 002.25-2.25V6.75z" />
          </svg>
          <h3>Email</h3>
          <p>{{ section.settings.email }}</p>
        </div>
      </div>

      <!-- Hours -->
      <div class="contact-card bg-white p-6 rounded-2xl shadow-sm hover:shadow-md">
        <div class="flex flex-col items-center text-center">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5" class="text-green-600">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6l3.5 2m6.5-2a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <h3>Business Hours</h3>
          <p>{{ section.settings.hours }}</p>
        </div>
      </div>

    </div>
  </div>
</section>

{% schema %}
{
  "name": "Contact Information",
  "settings": [
    { "type": "text", "id": "heading", "label": "Section Heading", "default": "Get in Touch" },
    { "type": "textarea", "id": "address", "label": "Address", "default": "123 Ayurvedic Lane, Bengaluru, India 560001" },
    { "type": "text", "id": "phone", "label": "Phone Number", "default": "+91 98765 43210" },
    { "type": "text", "id": "email", "label": "Email Address", "default": "support@yourstore.com" },
    { "type": "textarea", "id": "hours", "label": "Business Hours", "default": "Mon - Sat: 9:00 AM - 6:00 PM\nSunday: Closed" }
  ],
  "presets": [
    { "name": "Contact Information", "category": "Contact" }
  ]
}
{% endschema %}
