<style>
  .contact-info-section {
    background-color: #f9fafb;
    padding: 60px 0;
  }

  .contact-info-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 24px;
    justify-items: center;
  }

  @media (max-width: 1024px) {
    .contact-info-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 640px) {
    .contact-info-grid {
      grid-template-columns: 1fr;
    }
  }

  .contact-card {
    background: #fff;
    border-radius: 18px;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
    text-align: center;
    padding: 40px 20px;
    width: 100%;
    max-width: 280px;
    min-height: 230px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
  }

  .contact-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.1);
  }

  .contact-card svg {
    width: 38px !important;
    height: 38px !important;
    color: #22c55e;
    margin-bottom: 16px;
  }

  .contact-card h3 {
    font-size: 16px;
    font-weight: 700;
    color: #1a1a1a;
    margin-bottom: 8px;
  }

  .contact-card p {
    font-size: 14px;
    line-height: 1.6;
    color: #555;
    margin: 0;
    max-width: 230px;
    word-wrap: break-word;
    white-space: normal;
  }
</style>


<section class="contact-info-section">
  <div class="page-width text-center">
    <h2 class="text-3xl font-semibold text-gray-800 mb-12">{{ section.settings.heading }}</h2>

    <div class="contact-info-grid">

      <!-- Address -->
      <div class="contact-card">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" d="M12 11c1.104 0 2-.896 2-2s-.896-2-2-2-2 .896-2 2 .896 2 2 2z" />
          <path stroke-linecap="round" stroke-linejoin="round" d="M12 22s8-4.5 8-11a8 8 0 10-16 0c0 6.5 8 11 8 11z" />
        </svg>
        <h3>Our Address</h3>
        <p>{{ section.settings.address }}</p>
      </div>

      <!-- Phone -->
      <div class="contact-card">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75a.75.75 0 01.75-.75h2.09a.75.75 0 01.705.48l1.26 3.15a.75.75 0 01-.17.8l-1.3 1.3a11.03 11.03 0 005.28 5.28l1.3-1.3a.75.75 0 01.8-.17l3.15 1.26a.75.75 0 01.48.705v2.09a.75.75 0 01-.75.75H17a16.5 16.5 0 01-14.75-14.75v-.5z" />
        </svg>
        <h3>Call Us</h3>
        <p>{{ section.settings.phone }}</p>
      </div>

      <!-- Email -->
      <div class="contact-card">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75l-9.75 6-9.75-6m19.5 0A2.25 2.25 0 0019.5 4.5H4.5a2.25 2.25 0 00-2.25 2.25v10.5A2.25 2.25 0 004.5 19.5h15a2.25 2.25 0 002.25-2.25V6.75z" />
        </svg>
        <h3>Email</h3>
        <p>{{ section.settings.email }}</p>
      </div>

      <!-- Hours -->
      <div class="contact-card">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6l3.5 2m6.5-2a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        <h3>Business Hours</h3>
        <p>{{ section.settings.hours }}</p>
      </div>

    </div>
  </div>
</section>

{% schema %}
{
  "name": "Contact Information",
  "settings": [
    { "type": "text", "id": "heading", "label": "Section Heading", "default": "Get in Touch" },
    { "type": "textarea", "id": "address", "label": "Address", "default": "15/131 Vasundhra, Ghaziabad, Uttar Pradesh, India 201012" },
    { "type": "text", "id": "phone", "label": "Phone Number", "default": "9911492961" },
    { "type": "text", "id": "email", "label": "Email Address", "default": "support@kindee.in" },
    { "type": "textarea", "id": "hours", "label": "Business Hours", "default": "Mon - Sat: 9:00 AM - 6:00 PM\nSunday: Closed" }
  ],
  "presets": [
    { "name": "Contact Information", "category": "Contact" }
  ]
}
{% endschema %}
