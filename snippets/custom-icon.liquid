{% comment %}
  Renders product benefits with icons

  Usage:
  {% render 'custom-icon' %}
{% endcomment %}

<style>
  .product-benefits {
    margin: 2rem 0;
  }

  .product-benefits-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1rem;
  }

  @media screen and (max-width: 749px) {
    .product-benefits-grid {
      grid-template-columns: 1fr;
    }
  }

  .benefit-item {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 0.5rem;
  }

  .benefit-icon {
    flex-shrink: 0;
    width: 50px;
    height: 50px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #f5f3ff;
    border-radius: 50%;
  }

  .benefit-icon svg {
    width: 28px;
    height: 28px;
    fill: #5b47db;
  }

  .benefit-icon img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 50%;
  }

  .benefit-title {
    font-size: 16px;
    font-weight: 600;
    color: #5b47db;
    line-height: 1.4;
    margin: 0;
  }
</style>

