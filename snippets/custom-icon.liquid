{% comment %}
  Renders product benefits with icons

  Usage:
  {% render 'custom-icon' %}
{% endcomment %}

<style>
  .product-benefits {
    margin: 2rem 0;
  }

  .product-benefits-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1.2rem;
  }

  @media screen and (max-width: 749px) {
    .product-benefits-grid {
      grid-template-columns: 1fr;
      gap: 1rem;
    }
  }

  .benefit-item {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 0.5rem;
  }

  .benefit-icon {
    flex-shrink: 0;
    width: 50px;
    height: 50px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #e8f5e9;
    border-radius: 50%;
  }

  .benefit-icon svg {
    width: 28px;
    height: 28px;
    fill: #2e7d32;
  }

  .benefit-title {
    font-size: 16px;
    font-weight: 600;
    color: #1b5e20;
    line-height: 1.4;
    margin: 0;
  }
</style>

<div class="product-benefits">
  <div class="product-benefits-grid">
    <div class="benefit-item">
      <div class="benefit-icon">
        <img
          src="https://cdn.shopify.com/s/files/1/0704/4861/1478/files/images_9.png?v=1767990015"
          alt="Daily Wellness"
          width="50"
          height="50"
          loading="lazy"
        >
      </div>
